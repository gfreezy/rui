{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"zest"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo run",
			"presentation": {
				"focus": true,
				"clear": true
			},
			"options": {
				"env": {
					"RUST_BACKTRACE": "1"
				}
			}
		},
		{
			"type": "cargo",
			"command": "fix",
			"args": [
				"--allow-dirty"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo fix",
			"presentation": {
				"focus": true
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build",
		}
	]
}