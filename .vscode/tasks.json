{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo run",
			"presentation": {
				"reveal": "silent",
				"close": true,
				"revealProblems": "onProblem"
			}
		},
		{
			"type": "cargo",
			"command": "fix",
			"args": [
				"--allow-dirty"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo fix",
			"presentation": {
				"focus": true
			}
		}
	]
}